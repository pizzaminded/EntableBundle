<table class="table table-bordered table-hover table-striped ">
    <thead>
    <tr>
        {% for header in table.headers %}
        <th>{{ header.title|trans }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for row in table.content %}
        <tr>
            {% for cell in row %}
                <td>{{ cell|raw }}</td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>